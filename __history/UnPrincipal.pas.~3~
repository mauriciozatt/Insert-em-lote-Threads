{$R *.dfm}

procedure TfrmPrincipal.Button1Click(Sender: TObject);
var
  I: Integer;
begin
//sql de insert eu defini no fdquery, mas poderia passar por aqui sql.add()

  FDQuery1.Params.ArraySize := 100;  //define a quantidade de registros da Matriz

  for I := 0 to 100 - 1 do
  begin
  //campos da minha tabela
    FDQuery1.Params[0].AsIntegers[I] := I;
    FDQuery1.Params[1].AsIntegers[I] := 1;
    FDQuery1.Params[2].AsDateTimes[I] := Now;
    FDQuery1.Params[3].AsStrings[I] := 'TESTE3';
    FDQuery1.Params[4].AsStrings[I] := 'TESTE4';
    FDQuery1.Params[5].AsStrings[I] := 'TESTE5';
    FDQuery1.Params[6].AsStrings[I] := 'TESTE6';
  end;

  FDQuery1.Execute(100, 0);

end;

end.
